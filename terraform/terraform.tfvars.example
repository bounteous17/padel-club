# AWS Configuration
aws_region  = "eu-central-1"
environment = "production"

# EC2 Configuration
key_name         = "your-ec2-key-pair-name"
allowed_ssh_cidr = "YOUR_IP/32" # e.g., "203.0.113.25/32"

# RDS Configuration (publicly accessible)
db_username     = "padel"
db_password     = "your-secure-password-here" # Use a strong password!
db_name         = "universal_padel_club"
allowed_db_cidr = "YOUR_IP/32" # e.g., "203.0.113.25/32" or "0.0.0.0/0" for all

# GitHub Configuration (for CI/CD)
github_repository = "your-username/padel-club" # Your GitHub repo for OIDC auth
